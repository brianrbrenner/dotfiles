{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "filetypes": ["c", "cpp", "h", "hpp", "objc", "objcpp"],
            "initializationOptions": {
                "clangd.fallbackFlags": ["-std=c++20"],
                "coc.preferences.colorSupport": true,
                "coc.preferences.semanticTokensHighlights": false
            }
        }
    }
}
